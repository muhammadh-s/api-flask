{
	"openapi": "3.0.2",
	"info": {
		"title": "todo-api",
		"description": "A RESTful API for task management.",
		"version": "1.0",
		"x-logo": {
			"url": "https://github.com/muhammadh-s/todo-app/raw/master/src/logo.png",
			"backgroundColor": "#FFFFFF",
			"altText": "todo app logo"
		},
		"contact": {
			"name": "GitHub",
			"url": "https://github.com/muhammadh-s/todo-app"
		}
	},
	"servers": [
		{
			"url": "https://todo-flask-restful-api.herokuapp.com/"
		}
	],
	"paths": {
		"/todos": {
			"get": {
				"tags": [
					"todos"
				],
				"summary": "Calls a list of todos",
				"responses": {
					"200": {
						"description": "A list of todos."
					},
					"400": {
						"description": "The correct format ..."
					},
					"409": {
						"description": "The same todo already exists."
					},
					"415": {
						"description": "Content-Type must be -> application/json."
					}
				}
			},
			"post": {
				"tags": [
					"todos"
				],
				"summary": "Creates a new todo.",
				"parameters": [
					{
						"in": "query",
						"name": "todo",
						"description": "The todo to create.",
						"schema": {
							"type": "object",
							"required": [
								"task",
								"color"
							],
							"properties": {
								"task": {
									"type": "string"
								},
								"color": {
									"type": "string"
								}
							}
						}
					}
				],
				"responses": {
					"201": {
						"description": "Created"
					}
				}
			},
			"delete": {
				"tags": [
					"todos"
				],
				"summary": "Deletes a todo.",
				"parameters": [
					{
						"in": "query",
						"name": "id",
						"description": "The id of a todo.",
						"schema": {
							"type": "object",
							"required": [
								"id"
							],
							"properties": {
								"id": {
									"type": "integer"
								}
							}
						}
					}
				],
				"responses": {
					"200": {
						"description": "todo deleted"
					}
				}
			}
		}
	},
	"security": [
		{
			"app_id": []
		}
	]
}